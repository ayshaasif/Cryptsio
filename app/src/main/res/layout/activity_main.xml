<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e3ecf8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/TransactionLayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/Headcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B4F39D97">

            <TextView
                android:id="@+id/acctName"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="-90dp"
                android:layout_marginBottom="20dp"
                android:layout_toStartOf="@+id/balanceTransaction"
                android:background="@drawable/rounded_corners_red"
                android:minWidth="371dp"
                android:text="AccountHolder"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/balanceTransaction"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="145dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="20dp"
                android:hint="ET"
                android:maxWidth="200dp"
                android:maxHeight="160dp"
                android:paddingRight="20dp"
                android:scaleType="fitXY"
                android:text="ETH"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/TransactionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Transaction"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/transactionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TransactionLabel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#97D676E6"
                android:minHeight="30dp"
                android:text=" Sender's Account: "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/account1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="0xajh......."
                android:inputType="text"
                android:scrollbars="vertical"
                android:textColor = "@color/black"
                android:minHeight="30dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="#97D676E6"
                android:minHeight="30dp"
                android:text="Receiver's Account: "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/account2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="0xajh......."
                android:inputType="text"
                android:scrollbars="vertical"
                android:textColor = "@color/black"
                android:minHeight="30dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:minHeight="30dp"
                android:background="#97D676E6"
                android:text="Amount of ETHERS"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/noEthers"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:minHeight="35dp"
                android:padding="5dp"
                android:textColor = "@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_below="@+id/transactionForm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"
            android:shadowColor="@color/cardview_shadow_end_color"
            android:text="Send Ethers"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>
    </LinearLayout>




</LinearLayout>
